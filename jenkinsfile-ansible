pipeline {
    agent none
    stages { 
        stage('maven build'){
           agent any
            steps{
                sh 'mvn -DskipTests clean install'
            }
        }
        stage('Deploy to tomcat Server'){
           agent {label "ansible-master"}
            steps{
                sh "whoami"
                sh 'ansible-playbook /home/ubuntu/ansible/tomcat-deploy-dev.yml'
            }
        }
        }
}
